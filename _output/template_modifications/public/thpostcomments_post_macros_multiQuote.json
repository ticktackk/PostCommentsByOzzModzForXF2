{
    "template": "post_macros",
    "description": "Multi-quote option for comments",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "#(^\\s*<xf:if is=\"\\$xf\\.options\\.multiQuote.*?)(\">)$#sim",
    "replace": "$1 AND (!$post.thpostcomments_depth || ($post.thpostcomments_depth && $xf.options.thpostcomments_enableMultiQuote))$2"
}