{
    "template": "post_macros",
    "description": "Pass \"nestedPost\" and \"depth\" argument to \"post_last_edit\" macro",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "#(^\\s*<xf:macro name=\"post_last_edit\")(.*?\\/>$)#m",
    "replace": "$1 arg-nestedPost=\"{$nestedPost}\" arg-depth=\"{$depth}\"$2"
}