{
    "template": "post_macros",
    "description": "Add nested posts",
    "execution_order": 11,
    "enabled": true,
    "action": "preg_replace",
    "find": "#^\\s*<\\/article>.*?<xf:ad position=\"post_below_container\".*?<xf:macro name=\"post_attribution\"$#sm",
    "replace": "\t\t<xf:if is=\"$nestedPost\">\n\t\t\t<xf:if is=\"{$post.thpostcomments_depth} == 0\">\n\t\t\t\t<xf:if contentcheck=\"true\">\n\t\t\t\t\t<div class=\"thpostcomments_commentsContainer\">\n\t\t\t\t\t\t<xf:contentcheck>\n\t\t\t\t\t\t\t<xf:if is=\"$nestedPost.children is not empty && is_array($nestedPost.children)\">\n\t\t\t\t\t\t\t\t<xf:foreach loop=\"$nestedPost.children\" value=\"$subPost\">\n\t\t\t\t\t\t\t\t\t<xf:macro template=\"post_macros\" name=\"post\"\n\t\t\t\t\t\t\t\t\t\t\t  arg-nestedPost=\"{$subPost}\"\n\t\t\t\t\t\t\t\t\t\t\t  arg-post=\"{$subPost.record}\"\n\t\t\t\t\t\t\t\t\t\t\t  arg-depth=\"{{ $depth + 1 }}\"\n\t\t\t\t\t\t\t\t\t\t\t  arg-thread=\"{$thread}\" />\n\t\t\t\t\t\t\t\t</xf:foreach>\n\t\t\t\t\t\t\t</xf:if>\n\t\t\t\t\t\t</xf:contentcheck>\n\t\t\t\t\t</div>\n\t\t\t\t</xf:if>\n\t\t\t<xf:else />\n\t\t\t\t<xf:if is=\"$nestedPost.children is not empty && is_array($nestedPost.children)\">\n\t\t\t\t\t<xf:foreach loop=\"$nestedPost.children\" value=\"$subPost\">\n\t\t\t\t\t\t<xf:macro template=\"post_macros\" name=\"post\"\n\t\t\t\t\t\t\t\t  arg-nestedPost=\"{$subPost}\"\n\t\t\t\t\t\t\t\t  arg-post=\"{$subPost.record}\"\n\t\t\t\t\t\t\t\t  arg-depth=\"{{ $depth + 1 }}\"\n\t\t\t\t\t\t\t\t  arg-thread=\"{$thread}\" />\n\t\t\t\t\t</xf:foreach>\n\t\t\t\t</xf:if>\n\t\t\t</xf:if>\n\t\t</xf:if>\n\n$0"
}